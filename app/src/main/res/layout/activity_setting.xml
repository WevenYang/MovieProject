<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/toolbar_header"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout1"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title1"
                    android:textSize="15sp"
                    android:text="留言"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/line1"
                    android:layout_below="@+id/title1"
                    android:background="@color/grey"
                    />

                <TextView
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content1"
                    android:layout_below="@+id/title1"
                    android:layout_alignParentLeft="true"
                    android:text="意见反馈"
                    android:textSize="20sp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personal_layout"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/personal"
                    android:textSize="15sp"
                    android:text="个人信息"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/personal_line"
                    android:layout_below="@+id/personal"
                    android:background="@color/grey"
                    />

                <TextView
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:layout_below="@+id/personal_line"
                    android:layout_alignParentLeft= "true"
                    android:text="昵称"
                    android:textSize="20sp"/>

                <TextView
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/personal_name"
                    android:layout_below="@+id/name"
                    android:layout_alignParentLeft= "true"
                    android:text="Weven"
                    android:textSize="15sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/line1_1"
                    android:layout_below="@+id/personal_name"
                    android:background="@color/grey"
                    />

                <TextView
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone"
                    android:layout_below="@+id/line1_1"
                    android:layout_alignParentLeft= "true"
                    android:text="手机号码"
                    android:textSize="20sp"/>

                <TextView
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/personal_phone"
                    android:layout_below="@+id/phone"
                    android:layout_alignParentLeft= "true"
                    android:text="Weven"
                    android:textSize="15sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/line1_2"
                    android:layout_below="@+id/personal_phone"
                    android:background="@color/grey"
                    />

                <TextView
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/intro"
                    android:layout_below="@+id/line1_2"
                    android:layout_alignParentLeft= "true"
                    android:text="简介"
                    android:textSize="20sp"/>

                <TextView
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/personal_intro"
                    android:layout_below="@+id/intro"
                    android:layout_alignParentLeft= "true"
                    android:text="Weven"
                    android:textSize="15sp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title2"
                    android:textSize="15sp"
                    android:text="关于"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/line2"
                    android:layout_below="@+id/title2"
                    android:background="@color/grey"
                    />

                <TextView
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content2"
                    android:layout_below="@+id/title2"
                    android:layout_alignParentLeft= "true"
                    android:text="开发者"
                    android:textSize="20sp"/>

                <TextView
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content2_1"
                    android:layout_below="@+id/content2"
                    android:layout_alignParentLeft= "true"
                    android:text="Weven"
                    android:textSize="15sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/line2_1"
                    android:layout_below="@+id/content2_1"
                    android:background="@color/grey"
                    />


                <TextView
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content3"
                    android:layout_below="@+id/line2_1"
                    android:layout_alignParentLeft= "true"
                    android:text="检查新版本"
                    android:textSize="20sp"/>

                <TextView
                    android:paddingBottom="8dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/content3_1"
                    android:layout_below="@+id/content3"
                    android:layout_alignParentLeft= "true"
                    android:text="当前版本1.0"
                    android:textSize="15sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/line3_1"
                    android:layout_below="@+id/content3_1"
                    android:background="@color/grey"
                    />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>